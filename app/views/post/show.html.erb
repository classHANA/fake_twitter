<div class="card">
  <div class="card-header">
    <%= @post.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @post.content %></p>
      <footer class="blockquote-footer">
      	<form action="/post/create_reply/<%= @post.id%>">
      		<input type="text" name="content">
      		<input type="submit" value="댓글!!!!">
      	</form>
      </footer>
    </blockquote>
  </div>
</div>

<% @post.replies.each do |r| %>
	<div class="card">
	  <div class="card-body">
	    <%= r.content %>
	  </div>
	</div>
<% end%>



























